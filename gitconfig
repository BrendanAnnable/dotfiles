[core]
	excludesfile = /Users/brendan/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[user]
	name = Brendan Annable
	email = brendan.a@canva.com
[push]
	default = current
[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f
[alias]
  # https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
	co = checkout
	br = branch
	ci = commit
	st = status
	rb = rebase
  au = add -u
	rbc = rebase --continue
	rba = rebase --abort
	unstage = reset HEAD --
	last = log -1 HEAD
	rbm = !git fetch origin master && git rebase origin/master
	rbg = !git fetch origin green && git rebase origin/green
  hash = rev-parse --short --sq HEAD
  gethash = !git hash | pbcopy
  d = diff --cached
  fix = commit --amend --no-edit
  fixu = !git add -u && git commit --amend --no-edit
  down = fetch --all --prune
  dn = !git down
